{
  "name": "Ruby",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "workspaceFolder": "/workspace", 
  "workspaceMount": "source=${localWorkspaceFolder}/src,target=/workspace,type=bind,consistency=cached",
  "appPort": [
    "80:80"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp"
      ]
    }
  }
}